
@{
    ViewData["Title"] = "Delete";
}

@model Movie_app_response


<h1>Confirm Deletion</h1>
<h2>Are you sure you want to delete @Model.Title?</h2>


<form method="post" asp-controller="Home" asp-action="Delete">
    <button type="submit">Delete</button>
    <a asp-controller="Home" asp-action="DisplayMovies" class="btn btn-primary">Cancel</a>

    <input type="hidden" asp-for="MovieID" />
</form>